            h1 {{time}}
            table-component(:table-data="tableData", resizable, inline-template)
                .content
                    input(v-model="search") 
                    | {{columnNames}}
                    table.table.table-bordered(:class="{resizable: resizable}", v-show="!emptyTable")
                        thead
                            template(v-for="header in Object.keys(tableData[0])")
                                th(@mousedown="setCurrentTarget($event)", @mousemove="resizeColumn($event)") {{header}}
                        tbody
                             tr(v-for="item in filteredData" )
                                 td(v-for="value in item") {{value}}
                                    
                    p(v-show="emptyTable") No data found             

            
            //script(type="text/x-template" id="table-component")
                table.table.table-bordered
                    thead
                        template(v-for="header in Object.keys(tableData[0])")
