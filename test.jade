      //form.col-4
        .form-group.ppp
          label(for='email') Email address
          input#email.form-control(v-model='email', aria-describedby='emailHelp', placeholder='Enter email', type='email')
          small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
        .form-group
          label(for='password') Password
          input#password.form-control(placeholder='Password', v-model='password', type='password')
        .form-check
          input#checkbox.form-check-input(v-model='checkbox', type='checkbox')
          label.form-check-label(for='checkbox') Check me out
        p.alert.alert-info Checked: {{checkbox}}
        .form-group
          label(for='state') Selet box
          select#state.form-control(v-model='selected')
            option(v-for='option in options', :value='option.value') {{option.text}}
          p.alert.alert-info Selected: {{selected}}
        fieldset.form-group
          .row
            legend.col-form-label.col-sm-2.pt-0 Radios
            .col-sm-10
              .form-check
                input#gridRadios1.form-check-input(name='gridRadios', value='option1', v-model='radio', type='radio')
                label.form-check-label(for='gridRadios1')
                  | First radio
              .form-check.iio
                input#gridRadios2.form-check-input(name='gridRadios', v-model='radio', value='option2', type='radio')
                label.form-check-label(for='gridRadios2')
                  | Second radio
              .form-check.disabled
                input#gridRadios3.form-check-input(name='gridRadios', v-model='radio', value='option3', disabled='', type='radio')
                label.form-check-label(for='gridRadios3')
                  | Third disabled radio
          p.alert.alert-info Выбрано: {{ radio }}
        button.btn.btn-primary(type='submit') Submit

